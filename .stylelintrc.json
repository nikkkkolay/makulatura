{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": null,
    "order/properties-order": [
      [
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "display",
        "flex-direction",
        "justify-content",
        "align-items",
        "width",
        "height",
        "padding",
        "margin",
        "font-size",
        "color",
        "background",
        "border"
      ],
      { "unspecified": "bottomAlphabetical" }
    ]
  }
}
